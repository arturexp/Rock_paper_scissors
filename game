import random
import sys

options = {"rock": "paper",
           "paper": "scissors",
           "scissors": "rock"}
name = input("Enter your name:")
print(f" Hello, {name}")
user_rating = 0
rating_file = open('rating.txt')
rating_file = rating_file.readlines()
line = [line for line in rating_file if name in line]
name, user_rating = line[0].split()
user_rating = int(user_rating)


while True:
    user_choice = input()
    ai_choice = random.choice(list(options.keys()))
    if user_choice == "!exit":
        print("Bye!")
        sys.exit()
    elif user_choice == '!rating':
        print(f'Your rating: {user_rating}')
    if user_choice not in options:
        print("Invalid input")
    elif user_choice == ai_choice:
        print(f"There is a draw ({ai_choice})")
        user_rating += 50
    elif user_choice != options[ai_choice]:
        print(f"Sorry, but the computer chose {ai_choice}")
    elif user_choice == options[ai_choice]:
        print(f"Well done. The computer chose {ai_choice} and failed")
        user_rating += 100
